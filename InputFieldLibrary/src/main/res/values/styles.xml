<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_field_name">
        <item name="android:textColor">@color/input_field_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="input_field_desc">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/input_field_darkGray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="input_field_state_hint">
        <item name="android:visibility">gone</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/input_field_darkGray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="input_field_valueText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/input_field_darkGray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="input_field_dialog_btn">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
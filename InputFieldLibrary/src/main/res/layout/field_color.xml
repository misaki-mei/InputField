<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/if_nameTextView"
        style="@style/input_field_name" />

    <TextView
        android:id="@+id/if_descTextView"
        android:layout_below="@id/if_nameTextView"
        style="@style/input_field_desc" />

    <snowyuki.colorpanellibrary.view.ColorDisplayView
        android:id="@+id/colorBlock"
        app:display_mode="single_color"
        android:layout_alignParentEnd="true"
        app:border_color="@color/input_field_white"
        app:mask_shape="rect"
        app:border_width="1dp"
        android:layout_width="36dp"
        android:layout_height="36dp" />
</RelativeLayout>